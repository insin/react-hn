{
  "extends": ["standard", "standard-react"],
  "globals": {
    "__VERSION__": true
  },
  "rules": {
    "brace-style": [2, "stroustrup", {"allowSingleLine": true}],
    "eqeqeq": [2, "smart"],
    "jsx-quotes": [2, "prefer-double"],
    "react/prop-types": 0,
    "react/self-closing-comp": 0,
    "react/wrap-multilines": 0,
    "space-before-function-paren": [2, "never"]
  },
  "parser": "babel-eslint"
}
